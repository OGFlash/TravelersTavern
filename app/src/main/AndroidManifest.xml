<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.wildlab.travelerstavern">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_mtn"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".DnDOpeningActivity" android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CharacterInfoActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".DnDActivity" android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
