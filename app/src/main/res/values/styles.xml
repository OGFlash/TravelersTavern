<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="SuperAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="alertDialogTheme">@style/custom_dialog_theme</item>

    </style>

    <!-- Base application theme. -->
    <style name="SuperAppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>

        <item name="colorControlHighlight">#008080</item>
        <item name="colorControlActivated">#292929</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="android:actionModeStyle">@style/MyActionModeStyle</item>
        <item name="actionModeStyle">@style/MyActionModeStyle</item>
        <item name="android:actionBarStyle">@style/MyActionModeStyle</item>
        <item name="actionBarStyle">@style/MyActionModeStyle</item>
        <item name="android:windowFullscreen">true</item>
        <item name="alertDialogTheme">@style/custom_dialog_theme</item>
    </style>

    <style name="MyActionModeStyle" parent="Widget.AppCompat.Light.ActionMode.Inverse">
        <item name="android:background">@color/colorTeal</item>
        <item name="background">@color/colorTeal</item>
        <item name="android:colorBackground">@color/colorTeal</item>
    </style>

    <style name="MyToolBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="subtitleTextColor">@color/colorWhite</item>
    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorTeal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NewOverlay" parent="Base.V7.ThemeOverlay.AppCompat.Dialog"/>

    <style name="custom_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparentBlack</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/custom_dialog_animation_style</item>
    </style>

    <style name="custom_dialog_animation_style" parent="custom_dialog_theme">
        <item name="android:windowEnterAnimation">@anim/translate_left_side</item>
        <item name="android:windowExitAnimation">@anim/translate_right_side</item>
    </style>

    <style name="CustomWindowTitle">
        <item name="android:textAppearance">@style/CustomWindowTitleTextStyle</item>
    </style>

    <style name="CustomWindowTitleTextStyle">
        <item name = "android:textSize">30sp</item>
        <item name = "android:textColor">#ffffff</item>
        <item name = "android:textStyle">bold|italic</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:ems">10</item>
    </style>

</resources>
